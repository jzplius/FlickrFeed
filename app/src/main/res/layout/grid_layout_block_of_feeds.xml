<?xml version="1.0" encoding="utf-8"?>
<ScrollView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android1="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true" >

	<GridLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:columnCount="4"
	    tools:context="lt.justplius.flickrapi.PhotoFeedActivity" >

	    <ImageView
	        android:id="@+id/imageView1"
	        android:layout_width="1080px"
	        android:layout_height="608px"
	        android:layout_column="0"
	        android:layout_columnSpan="2"
	        android:layout_gravity="fill"
	        android:layout_row="0"
	        android:scaleType="centerCrop"
	        android:src="@drawable/background_image" />

	    <View
	        android1:layout_width="match_parent"
	        android1:layout_height="152px"
	        android1:layout_column="0"
	        android1:layout_columnSpan="2"
	        android1:layout_gravity="bottom"
	        android1:layout_row="0"
	        android1:background="@drawable/selector_gradiant_shade" />

	    <ImageView
	        android1:id="@+id/imageViewIcon"
	        android1:layout_width="128px"
	        android1:layout_height="128px"
	        android1:layout_column="0"
	        android1:layout_columnSpan="2"
	        android1:layout_gravity="right|bottom"
	        android1:layout_marginBottom="36px"
	        android1:layout_marginRight="36px"
	        android1:layout_row="0"
	        android1:src="@drawable/feed_buddyicon_overlay" />

	    <ImageView
	        android1:id="@+id/imageView5"
	        android1:layout_width="152px"
	        android1:layout_height="152px"
	        android1:layout_column="0"
	        android1:layout_columnSpan="2"
	        android1:layout_gravity="right|bottom"
	        android1:layout_marginBottom="24px"
	        android1:layout_marginRight="24px"
	        android1:layout_row="0"
	        android1:scaleType="fitXY"
	        android1:src="@drawable/feed_buddyicon_overlay" />

	    <TextView
	        android1:id="@+id/textViewTitle1"
	        android1:layout_width="wrap_content"
	        android1:layout_column="0"
	        android1:layout_columnSpan="2"
	        android1:layout_gravity="bottom|left"
	        android1:layout_marginBottom="108px"
	        android1:layout_marginLeft="36px"
	        android1:layout_row="0"
	        android1:maxHeight="260px"
	        android1:maxWidth="850px"
	        android1:text="..."
	        android1:textAppearance="?android:attr/textAppearanceLarge"
	        android1:textColor="@color/white"
	        android1:textSize="65px" />

	    <TextView
	        android1:id="@+id/textViewAuthor1"
	        android1:layout_width="wrap_content"
	        android1:layout_column="0"
	        android1:layout_columnSpan="2"
	        android1:layout_gravity="bottom|left"
	        android1:layout_marginBottom="48px"
	        android1:layout_marginLeft="36px"
	        android1:layout_row="0"
	        android1:alpha="0.6"
	        android1:maxWidth="850px"
	        android1:text="..."
	        android1:textColor="@color/white"
	        android1:textSize="36px" />

	    <ImageView
	        android:id="@+id/imageView2"
	        android:layout_width="540px"
	        android:layout_height="1080px"
	        android:layout_column="0"
	        android:layout_gravity="center_horizontal|fill"
	        android:layout_rowSpan="2"
	        android1:layout_row="1"
	        android:scaleType="centerCrop"
	        android:src="@drawable/background_image"
	        android:layout_weight="1" />

	    <ImageView
	        android:id="@+id/imageView3"
	        android:layout_width="540px"
	        android:layout_height="540px"
	        android1:layout_column="1"
	        android1:layout_gravity="center_horizontal|fill"
	        android1:layout_row="1"
	        android:scaleType="centerCrop"
	        android:src="@drawable/background_image" />

	    <View
	        android1:layout_width="540px"
	        android1:layout_height="270px"
	        android1:layout_column="1"
	        android1:layout_gravity="bottom|center_horizontal|fill_horizontal"
	        android1:layout_row="1"
	        android1:background="@drawable/selector_gradiant_shade" />

	    <TextView
	        android1:id="@+id/textViewTitle3"
	        android1:layout_width="wrap_content"
	        android1:layout_column="1"
	        android1:layout_gravity="bottom|left"
	        android1:layout_marginBottom="102px"
	        android1:layout_marginLeft="36px"
	        android1:layout_row="1"
	        android1:maxHeight="260px"
	        android1:maxWidth="400px"
	        android1:text="..."
	        android1:textAppearance="?android:attr/textAppearanceLarge"
	        android1:textColor="@color/white"
	        android1:textSize="45px" />

	    <TextView
	        android1:id="@+id/textViewAuthor3"
	        android1:layout_width="wrap_content"
	        android1:layout_column="1"
	        android1:layout_gravity="bottom|left"
	        android1:layout_marginBottom="48px"
	        android1:layout_marginLeft="36px"
	        android1:layout_row="1"
	        android1:alpha="0.6"
	        android1:maxWidth="400px"
	        android1:text="..."
	        android1:textColor="@color/white"
	        android1:textSize="30px" />

	    <ImageView
	        android:id="@+id/imageView4"
	        android:layout_width="540px"
	        android:layout_height="540px"
	        android1:layout_column="1"
	        android1:layout_gravity="center_horizontal|fill"
	        android1:layout_row="2"
	        android:scaleType="centerCrop"
	        android:src="@drawable/background_image" />

	    <View
	        android1:layout_height="270px"
	        android1:layout_column="0"
	        android1:layout_columnSpan="2"
	        android1:layout_gravity="bottom"
	        android1:layout_row="2"
	        android1:background="@drawable/selector_gradiant_shade" />

	    <TextView
	        android1:id="@+id/textViewTitle2"
	        android1:layout_width="wrap_content"
	        android1:layout_column="0"
	        android1:layout_gravity="bottom|left"
	        android1:layout_marginBottom="102px"
	        android1:layout_marginLeft="36px"
	        android1:layout_row="1"
	        android1:layout_rowSpan="2"
	        android1:maxHeight="400px"
	        android1:maxWidth="400px"
	        android1:text="..."
	        android1:textAppearance="?android:attr/textAppearanceLarge"
	        android1:textColor="@color/white"
	        android1:textSize="45px" />

	    <TextView
	        android1:id="@+id/textViewAuthor2"
	        android1:layout_width="wrap_content"
	        android1:layout_column="0"
	        android1:layout_gravity="bottom|left"
	        android1:layout_marginBottom="48px"
	        android1:layout_marginLeft="36px"
	        android1:layout_row="1"
	        android1:layout_rowSpan="2"
	        android1:alpha="0.6"
	        android1:maxWidth="400px"
	        android1:text="..."
	        android1:textColor="@color/white"
	        android1:textSize="30px" />

	    <TextView
	        android:id="@+id/textViewTitle4"
	        android1:layout_width="wrap_content"
	        android:layout_column="1"
	        android:layout_gravity="left|bottom"
	        android:layout_marginBottom="102px"
	        android:layout_marginLeft="36px"
	        android:layout_row="2"
	        android:textAppearance="?android:attr/textAppearanceLarge"
	        android:textColor="@color/white"
	        android:textSize="45px"
	        android1:maxHeight="260px"
	        android1:maxWidth="400px"
	        android1:text="..." />

	    <TextView
	        android:id="@+id/textViewAuthor4"
	        android1:layout_width="wrap_content"
	        android:layout_column="1"
	        android:layout_gravity="left|bottom"
	        android:layout_marginBottom="48px"
	        android:layout_marginLeft="36px"
	        android:layout_row="2"
	        android:alpha="0.6"
	        android:textColor="@color/white"
	        android:textSize="30px"
	        android1:maxWidth="400px"
	        android1:text=".." />

	</GridLayout>

</ScrollView>
